{% extends 'base.html.twig' %}

{% block title %}Color{% endblock %}

{% block body %}
    <h1>Color</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ color.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ color.name }}</td>
            </tr>
            <tr>
                <th>Value</th>
                <td>{{ color.value }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ color.createdAt ? color.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ color.updatedAt ? color.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ color.text }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_color_index') }}">back to list</a>

    <a href="{{ path('app_color_edit', {'id': color.id}) }}">edit</a>

    {{ include('color/_delete_form.html.twig') }}
{% endblock %}
