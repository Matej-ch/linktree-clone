{% extends 'base.html.twig' %}

{% block title %}Color index{% endblock %}

{% block body %}
    <h1>Color index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Value</th>
                <th>Created_at</th>
                <th>Updated_at</th>
                <th>Text</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for color in colors %}
            <tr>
                <td>{{ color.id }}</td>
                <td>{{ color.name }}</td>
                <td>{{ color.value }}</td>
                <td>{{ color.createdAt ? color.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ color.updatedAt ? color.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ color.text }}</td>
                <td>
                    <a href="{{ path('app_color_show', {'id': color.id}) }}">show</a>
                    <a href="{{ path('app_color_edit', {'id': color.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_color_new') }}">Create new</a>
{% endblock %}
