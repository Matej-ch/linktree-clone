{% extends 'base.html.twig' %}

{% block title %}Colors and links tree!{% endblock %}

{% block body %}

    <header class="flex flex-row-reverse w-full py-4 px-8 gap-4">
        {% if is_granted('ROLE_USER') %}
            <a href="{{ path('app_logout') }}" class="font-bold text-xl p-4 text-slate-600 hover:text-blue-600">
                Logout
            </a>
            <a href="{{ path('app_user_links', {name: user.name}) }}"
               class="font-bold text-xl p-4 text-slate-600 hover:text-blue-600">
                Links
            </a>
            <a href="{{ path('app_dashboard') }}" class="font-bold text-xl p-4 text-slate-600 hover:text-blue-600">
                Dashboard
            </a>
        {% else %}
            <a href="{{ path('app_login') }}"
               class="font-bold text-xl p-4 text-slate-600 hover:text-blue-600">
                Login
            </a>
            <a href="{{ path('app_register') }}" class="font-bold text-xl p-4 text-slate-600 hover:text-blue-600">
                Register
            </a>
        {% endif %}
    </header>

    <div class="relative mx-auto flex w-full justify-center font-sans flex-grow">

        <div class="w-full px-64 py-40">
            <div class="text-6xl font-bold prose">Welcome to linktree clone</div>
            <div class="text-2xl prose">Now with ability to add and show your favourite colors</div>
        </div>

        <div class="absolute bottom-0 right-0 -z-20">
            <div style="width: 0;height: 0;border-style: solid;border-width: 0 0 500px 500px;border-color: transparent transparent #007bff transparent;"></div>
        </div>

        <div class="absolute bottom-20 right-2 -z-30">
            <div class="bg-orange-400"
                 style="width: 30rem;height: 11rem;border-radius: 10rem;"></div>
        </div>

    </div>
{% endblock %}
