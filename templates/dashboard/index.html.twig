{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Hello you are logged in! âœ…</h1>

        <p>
            <a href="{{ path('app_user_edit') }}">EDIT YOUR SETTINGS</a>
        </p>

        {% if is_granted('ROLE_ADMIN') %}
            <p class="text-red-800 font-bold text-xl">You are cool admin</p>
        {% endif %}

        {% if is_granted('ROLE_USER') %}
            <a href="{{ path('app_logout') }}" class="">LOGOUT</a>

            <a href="{{ path('app_2fa_enable') }}">Enable 2fa</a>
        {% endif %}
    </div>
{% endblock %}
