<!DOCTYPE html>
<html class="w-full h-full">
<head>
    <meta charset="UTF-8">
    {% block metas %}{% endblock %}

    <title>{% block title %}Welcome!{% endblock %}</title>
    <link rel="icon"
          href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}

    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</head>
<body class="w-full h-full">

<main class="min-h-full flex flex-col items-stretch">

    {% block header %}
        {{ include('fragments/_admin_header.html.twig') }}
    {% endblock %}

    {% for flash in app.flashes('success') %}
        <div class="bg-emerald-300 text-emerald-800 p-4 rounded border-emerald-800 border mx-2 font-bold">{{ flash }}</div>
    {% endfor %}
    {% for flash in app.flashes('danger') %}
        <div class="bg-red-300 text-red-800 p-4 rounded border-red-800 border mx-2 font-bold">{{ flash }}</div>
    {% endfor %}

    {% block body %}{% endblock %}
</main>

</body>
</html>
