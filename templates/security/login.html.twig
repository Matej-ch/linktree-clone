{% extends 'base.html.twig' %}
{% block title %}Log In!{% endblock %}
{% block body %}
    <main class="mx-auto flex min-h-screen w-full items-center justify-center bg-gray-900 text-white">

        <form method="post" class="flex w-[30rem] flex-col space-y-10">
            <div class="text-center text-4xl font-medium">Please sign in</div>

            {% if error %}
                <div class="text-red-900 bg-red-300 p-4 font-bold border-red-800 rounded-sm">{{ error.messageKey|trans(error.messageData,'security') }}</div>
            {% endif %}

            <div class="w-full transform border-b-2 bg-transparent text-lg duration-300 focus-within:border-indigo-500">
                <label for="inputEmail">Email</label>
                <input
                        name="email"
                        type="email"
                        placeholder="Email"
                        id="inputEmail"
                        class="w-full border-none bg-transparent outline-none placeholder:italic focus:outline-none" required autofocus/>
            </div>

            <div class="w-full transform border-b-2 bg-transparent text-lg duration-300 focus-within:border-indigo-500">
                <label for="inputPassword">Email</label>
                <input type="password"
                       name="password"
                       id="inputPassword"
                       placeholder="Password"
                       class="w-full border-none bg-transparent outline-none placeholder:italic focus:outline-none" required/>
            </div>

            <button class="transform rounded-sm bg-indigo-600 py-2 font-bold duration-300 hover:bg-indigo-400" type="submit">
                LOG IN
            </button>
        </form>
    </main>

{% endblock %}